<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyteeDE.SceneSwitcher.MAUIApp.Pages.ConnectionSettingsPage"
             Title="Settings / Connection">
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Connection type" />
                <Picker 
                    ItemsSource="{Binding ConnectionTypeCollection}"
                    SelectedItem="{Binding ConnectionType}"
                    WidthRequest="300"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="10">
                <Label Text="Hostname / IP"/>
                <Entry 
                    Text="{Binding Host}"
                    WidthRequest="300"/>   
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="10">
                <Label Text="Port"/>
                <Entry
                    Text="{Binding Port}"
                    WidthRequest="300"/>
            </VerticalStackLayout> 
            <HorizontalStackLayout Spacing="50">
                <Label Text="Authentication Enabled" VerticalOptions="Center"/>
                <CheckBox 
                    IsChecked="{Binding AuthenticationEnabled}"/>
            </HorizontalStackLayout>
            <VerticalStackLayout Spacing="10">
                <Label Text="Token / Password"/>
                <Entry
                    Text="{Binding Token}"
                    IsPassword="True"
                    WidthRequest="300"
                    IsEnabled="{Binding AuthenticationEnabled}"/>
            </VerticalStackLayout>
            <Button 
                Text="Validate &amp; Save" 
                FontSize="Title"
                WidthRequest="300"
                Command="{Binding SaveCommand}"/>
        </VerticalStackLayout>    
    </ScrollView>
</ContentPage>