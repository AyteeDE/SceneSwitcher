<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyteeDE.SceneSwitcher.MAUIApp.MainPage">
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="75">
            <Button
                Text="App Switching"
                FontSize="Title"
                WidthRequest="300"
                IsEnabled="{Binding HasValidEndpointConfiguration}"/>
            <Button
                Text="Timer Switching"
                FontSize="Title"
                WidthRequest="300"
                IsEnabled="{Binding HasValidEndpointConfiguration}"/>
            <Button
                Text="Settings"
                FontSize="Title"
                WidthRequest="300"
                Clicked="Settings_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
