<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyteeDE.SceneSwitcher.MAUIApp.Pages.SettingsPage"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="75">
            <Button
                Text="Connection"
                FontSize="Title"
                WidthRequest="300"
                Clicked="ConnectionSettings_Clicked"/>
            <Button
                Text="Application Switcher"
                FontSize="Title"
                WidthRequest="300"
                Clicked="ApplicationSettings_Clicked"/>
            <Button
                Text="Timer Switcher" 
                FontSize="Title"
                WidthRequest="300"
                Clicked="TimerSettings_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>