<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AyteeDE.SceneSwitcher.MAUIApp.ViewModels"
             x:Class="AyteeDE.SceneSwitcher.MAUIApp.MainPage">
    <ContentPage.BindingContext>
        <local:ConfigurationViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="75">
            <Button
                Text="App Switching"
                FontSize="Title"
                IsEnabled="{Binding HasValidEndpointConfiguration}"/>
            <Button
                Text="Timer Switching"
                FontSize="Title"
                IsEnabled="{Binding HasValidEndpointConfiguration}"/>
            <Button
                Text="Settings"
                FontSize="Title"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
